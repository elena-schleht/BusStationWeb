@using BusStationWeb.Models
@model List<Trip>

<table class="table table-striped table-hover">
    <tr>
        <th>Дата отправления</th>
        <th>Откуда</th>
        <th>Куда</th>
        <th>Цена</th>
        <th>Кол-во свободных мест</th>
        <th></th>
    </tr>
    @foreach (var trip in Model)
    {
        <tr>
            <td>@trip.DepartureDate.ToString("dd.MM.yyyy hh:mm")</td>
            <td>@trip.Route.From.NameCity</td>
            <td>@trip.Route.To.NameCity</td>
            <td>@trip.Route.Price</td>
            <td>@trip.AvailableSeats</td>
            <td><button onclick="selectTrip(@trip.TripId, '@trip.Route.From.NameCity', '@trip.Route.To.NameCity', '@trip.DepartureDate.ToString("dd.MM.yyyy hh:mm")')" id="SelectedTrip" class="btn btn-default" data-bs-toggle="modal" data-bs-target="#TicketModal">Забронировать</button></td>
        </tr>
    }
</table>


