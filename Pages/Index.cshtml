@page
@model IndexModel
@{
    ViewData["Title"] = "Автовокзал Тирасполь";
}

<div id="Index" class="text-center wrp pb-3">
    <h1 class="display-4">Автовокзал Тирасполь</h1>
    <p>Тут вы можете выбрать интересующий вас маршрут и забронировать билет.</p>
</div>

<div class="text-center wrp">
    <table class="table table-striped table-hover">
        <tr>
            <th>Дата отправления</th>
            <th>Откуда</th>
            <th>Куда</th>
            <th>Цена</th>
            <th>Кол-во свободных мест</th>
            <th></th>
        </tr>
        @foreach (var trip in Model.Trips)
        {
            <tr>
                <td>@trip.DepartureDate.ToString("dd.MM.yyyy hh:mm")</td>
                <td>@trip.Route.From.NameCity</td>
                <td>@trip.Route.To.NameCity</td>
                <td>@trip.Route.Price</td>
                <td>@trip.AvailableSeats</td>
                <td><button onclick="selectTrip(@trip.TripId, '@trip.Route.From.NameCity', '@trip.Route.To.NameCity', '@trip.DepartureDate.ToString("dd.MM.yyyy hh:mm")')" id="SelectedTrip" class="btn btn-default">Забронировать</button></td>
            </tr>
        }
    </table>

    <div id="idTicket" class="text-center col-md-4 wrp pb-3" style="display: none; margin: 0 34%;">
        <form class="form" method="post">
            <div class="mb-3">
                <span id="selectedTrip"></span>
            </div>

            <div class="mb-3">
                <input id="selectedTripId" hidden name="tripId" />
            </div>
            <button id="postTicket" asp-page-handler="Ticket" type="submit" asp-for="tripId" class="btn btn-primary">Подтвердить</button>
        </form>
    </div>    

    @if(Model.IsBooked)
    {
        <div class="alert alert-success" role="alert">
            @Html.Raw(@Model.Info.Replace("\r\n", "<br />"))
        </div>
    }

    @if (Model.Error != null)
    {
        <div class="alert alert-danger" role="alert">
            @Html.Raw(@Model.Error.Replace("\r\n", "<br />"))
        </div>
    }
</div>