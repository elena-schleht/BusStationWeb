@page
@model BusStationWeb.Pages.Admin.Routes.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

@if ( Model.TypeModel == "route")
{
    <h4>Вы уверены, что хотите удалить маршрут?</h4>
    <div>
        <h3>Маршрут</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Откуда
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Route.From.NameCity)
            </dd>
            <dt class="col-sm-2">
                Куда
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Route.To.NameCity)
            </dd>
            <dt class="col-sm-2">
                Цена
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Route.Price)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="Route.RouteId" />
            <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.Route.RouteId" asp-route-type="route" /> |
            <a asp-page="./Index">Вернуться</a>
        </form>
    </div>
}