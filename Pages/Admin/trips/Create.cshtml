@page
@model BusStationWeb.Pages.Admin.Trips.CreateModel

@{
    ViewData["Title"] = "Создать";
}


<h4>Рейс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Дата отправления</label>
                <input asp-for="Trip.DepartureDate" class="form-control" />
                <span asp-validation-for="Trip.DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Маршрут</label>
                <select class="form-select" asp-for="Trip.RouteId" asp-items="@Model.Routes"></select>
                <span asp-validation-for="Trip.RouteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Количество мест</label>
                <input asp-for="Trip.AvailableSeats" class="form-control" />
                <span asp-validation-for="Trip.AvailableSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-route-type="trip" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="./Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}