@page
@model BusStationWeb.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h4>Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Route.RouteId" />
            <div class="form-group">
                <label asp-for="Route.From" class="control-label"></label>
                <input asp-for="Route.From" class="form-control" />
                <span asp-validation-for="Route.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route.To" class="control-label"></label>
                <input asp-for="Route.To" class="form-control" />
                <span asp-validation-for="Route.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Route.Price" class="control-label"></label>
                <input asp-for="Route.Price" class="form-control" />
                <span asp-validation-for="Route.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./AdminIndex">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}