@page
@model BusStationWeb.Pages.Admin.Vokzals.CreateModel

@{
    ViewData["Title"] = "Создать";
}

@if (Model.TypeModel == "citie")
{
    <h4>Город</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Наименование</label>
                    <input asp-for="Citie.NameCity" class="form-control" />
                    <span asp-validation-for="Citie.NameCity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" asp-route-type="citie" />
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-page="./Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}