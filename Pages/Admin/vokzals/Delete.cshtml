@page
@model BusStationWeb.Pages.Admin.Vokzals.DeleteModel

@{
    ViewData["Title"] = "Удаление вокзала";
}

@if (Model.TypeModel == "citie")
{
    <h4>Вы уверены, что хотите удалить вокзал?</h4>
    <div>
        <h3>Вокзал</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Наименовние
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contact.Citie.NameCity)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Contact.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" asp-route-id="@Model.Contact.Id" asp-route-type="citie" /> |
            <a asp-page="./Index">Вернуться</a>
        </form>
    </div>
}
